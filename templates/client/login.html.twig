{% extends 'base.html.twig' %}

{% block title %}Connexion Client{% endblock %}

{% block body %}
<div class="flex flex-col items-center justify-center min-h-screen bg-gray-100 px-4">
    <!-- Titre -->
    <h1 class="text-3xl font-semibold text-gray-700 mb-8">Connexion Client</h1>

    <!-- Conteneur principal -->
    <div class="max-w-4xl w-full bg-white shadow-lg rounded-xl overflow-hidden flex flex-col md:flex-row">
        <!-- Image -->
        <div class="w-full md:w-1/2 relative">
            <img src="{{ asset('images/pharmacie_img.png') }}" alt="Pharmacie"
                 class="w-full h-full object-cover">
        </div>

        <!-- Ligne de sÃ©paration -->
        <div class="hidden md:flex items-center">
            <div class="h-4/5 w-px bg-gray-300"></div>
        </div>

        <!-- Formulaire -->
        <div class="w-full md:w-1/2 p-8">
            {% if error %}
                <div class="mb-4 text-sm text-red-600 bg-red-100 p-3 rounded-lg">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <form method="post" class="space-y-4">
                <div>
                    <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
                    <input type="email" name="email" id="email" value="{{ last_username }}" required autofocus
                           class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-green-500 focus:border-green-500">
                </div>

                <div>
                    <label for="password" class="block text-sm font-medium text-gray-700">Mot de passe</label>
                    <input type="password" name="password" id="password" required
                           class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-green-500 focus:border-green-500">
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button type="submit"
                        class="w-full bg-green-600 text-white py-2 px-4 rounded-lg hover:bg-green-700 transition">
                    Se connecter
                </button>
            </form>

            <p class="mt-4 text-center text-sm text-gray-600">
                Vous n'avez pas de compte ?
                <a href="{{ path('app_client_register') }}" class="text-green-600 hover:underline">Inscrivez-vous</a>
            </p>
        </div>
    </div>
</div>
{% endblock %}
